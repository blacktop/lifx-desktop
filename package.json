{
  "name": "lifx-desktop",
  "version": "1.0.0",
  "description": "LIFX Desktop electron-app",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack",
    "electron": "cross-env NODE_ENV=development electron src/main",
    "dev": "cross-env NODE_ENV=development electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "test": "mocha"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main",
      "webpackConfig": "webpack.config.js"
    },
    "renderer": {
      "sourceDirectory": "src/renderer",
      "webpackConfig": "webpack.config.js"
    }
  },
  "build": {
    "appId": "io.blacktop.lifx-desktop",
    "directories": {
      "buildResources": "src/assets"
    },
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "publish": [
        "github"
      ],
      "certificateFile": "private/lifx-desktop.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "lifx-desktop"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Network"
    }
  },
  "repository": "https://github.com/blacktop/lifx-desktop.git",
  "author": "blacktop <blacktop@users.noreply.github.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "cross-env": "^5.1.3",
    "devtron": "^1.4.0",
    "electron": "1.7.12",
    "electron-builder": "^19.56.0",
    "electron-debug": "^1.5.0",
    "electron-webpack": "1.12.1",
    "mocha": "^5.0.1",
    "spectron": "^3.8.0",
    "webpack-build-notifier": "^0.1.22"
  },
  "dependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-1": "^6.22.0",
    "electron-localshortcut": "^1.1.1",
    "moment": "^2.18.1",
    "moment-duration-format": "^1.3.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.4.2"
  }
}
